<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileGame.Controls.SceneCar">
  <ContentView.Content>
        <Grid
            RowDefinitions="*,*"
            ColumnDefinitions="*,*">

            <Image x:Name="userCar"
                Source="MainCar2.png"
                VerticalOptions="End"
                HorizontalOptions="End"
                Grid.Column="1"
                Grid.Row="1"
                Margin="0,0,0,40"
                />
            <Image x:Name="evilCar1"
                Source="WhiteCar.png"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Grid.Column="0"
                TranslationY="-500"/>
            <Image x:Name="evilCar2"
                Source="WhiteCar.png"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Grid.Column="1"
                TranslationY="-500"/>
        </Grid>
  </ContentView.Content>
</ContentView>