<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:MobileGame.ViewModels" 
             xmlns:controls="clr-namespace:MobileGame.Controls"
             x:DataType="viewmodels:PlayPageViewModel"
             x:Class="MobileGame.Views.PlayPageView"
             BackgroundImageSource="PlayField.jpg">
    <ContentPage.Content>
        <Grid>
            <controls:SceneCar Score="{Binding Score}"/>
            
            <Label
                FontSize="30"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Text="Score"
                />
            <Label
                FontSize="30"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Text="Time"
                />
            <Image
                Source="LIFE.png"
                HorizontalOptions="Center"
                VerticalOptions="Start"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>