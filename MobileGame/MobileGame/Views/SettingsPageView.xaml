             x:Class="MobileGame.Views.SettingsPageView">
    <ContentPage.Content>
        <Grid>
            <Label
                 FontSize="30"
                TextColor="White"
                FontAttributes="Bold"
                Text="Name player"/>
            <Label
                FontSize="30"
                TextColor="White"
                FontAttributes="Bold"
